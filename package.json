{
  "version": "1.2.1",
  "license": "MIT",
  "name": "generate-index-file",
  "author": "Giancarlos Isasi",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "generate-index-file": "./dist/index.js"
  },
  "scripts": {
    "start": "tsdx watch",
    "addShebang": "node ./scripts/appendShebang.js",
    "build": "tsdx build --target node && npm run addShebang",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "module": "dist/generate-index-file.esm.js",
  "size-limit": [
    {
      "path": "dist/generate-index-file.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/generate-index-file.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.0",
    "del": "4.1.1",
    "husky": "^5.1.3",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "size-limit": "^4.10.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.31",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^16.0.0",
    "chalk": "^4.1.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "yargs": "^16.2.0"
  }
}
